<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自定义ViewPager+fragment实现-->
    <declare-styleable name="NavigationView">
        <!--底部导航栏高度-->
        <attr name="navi_height" format="dimension" />
        <!--底部导航栏背景-->
        <attr name="navi_background" format="color" />
        <!--Tab字体大小-->
        <attr name="navi_tabTextSize" format="dimension" />
        <!--Tab文字距Tab图标的距离-->
        <attr name="navi_tabTextTop" format="dimension" />
        <!--Tab图标大小-->
        <attr name="navi_tabIconSize" format="dimension" />
        <!--Tab未选中字体颜色-->
        <attr name="navi_tabNormalColor" format="color" />
        <!--Tab选中字体颜色-->
        <attr name="navi_tabSelectColor" format="color" />
        <!--提示红点的大小-->
        <attr name="navi_hintPointSize" format="dimension" />
        <!--消息红点的大小-->
        <attr name="navi_msgPointSize" format="dimension" />
        <!--提示红点距Tab图标的距离-->
        <attr name="navi_hintPointLeft" format="dimension" />
        <!--消息红点距Tab图标的距离-->
        <attr name="navi_msgPointLeft" format="dimension" />
        <!--提示红点距离顶部的距离-->
        <attr name="navi_hintPointTop" format="dimension" />
        <!--消息红点距顶部的距离-->
        <attr name="navi_msgPointTop" format="dimension" />
        <!--消息红点数字字体大小-->
        <attr name="navi_msgPointTextSize" format="dimension" />
        <!--分割线高度-->
        <attr name="navi_lineHeight" format="dimension" />
        <!--分割线颜色-->
        <attr name="navi_lineColor" format="color" />

        <!--是否有paddingBottom-->
        <attr name="navi_hasPadding" format="boolean"/>


        <!--中间图片的大小-->
        <attr name="navi_addIconSize" format="dimension" />
        <!--底部导航栏和加号的高度  加号会居中-->
        <attr name="navi_addLayoutHeight" format="dimension" />
        <!--添加按钮距离底部的距离-->
        <attr name="navi_addLayoutBottom" format="dimension"/>
        <!--图标显示-->
        <attr name="navi_scaleType">
            <flag name="CENTER_INSIDE" value="0" />
            <flag name="CENTER_CROP" value="1" />
            <flag name="CENTER" value="2" />
            <flag name="FIT_CENTER" value="3" />
            <flag name="FIT_END" value="4" />
            <flag name="FIT_START" value="5" />
            <flag name="FIT_XY" value="6" />
            <flag name="MATRIX" value="7" />
        </attr>


        <!--图标显示-->
        <attr name="navi_addLayoutRule">
            <flag name="RULE_CENTER" value="0" />
            <flag name="RULE_BOTTOM" value="1" />
        </attr>
       <!-- true 点击加号切换fragment
        false 点击加号不切换fragment进行其他操作（跳转界面等）-->
        <attr name="navi_addAsFragment" format="boolean"/>
        <attr name="navi_addSelectTextColor" format="color"/>
        <attr name="navi_addNormalTextColor" format="color"/>
        <attr name="navi_addTextSize" format="dimension"/>
        <!--加号文字距离顶部加号的距离-->
        <attr name="navi_addTextTopMargin" format="dimension"/>
        <!--是否和其他tab文字底部对齐-->
        <attr name="navi_addAlignBottom" format="dimension"/>
        <!-- ViewPager默认加载Fragment的数量 -->
        <attr name="navi_screenPageLimit" format="integer"/>

    </declare-styleable>

</resources>